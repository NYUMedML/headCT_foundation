{
    "train_batch_size": 4,
    "steps_per_print": 2000,
    "gradient_clipping": 1.0,
    "fp16": {
        "enabled": true,
        "auto_cast": false,
        "loss_scale": 0,
        "initial_scale_power": 16,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "consecutive_hysteresis": false,
        "min_loss_scale": 1
    },
    "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "overlap_comm": true,
        "contiguous_gradients": true,
        "cpu_offload": false
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "adam_w_mode": true,
            "lr": 1.5e-4,
            "betas": [0.9, 0.95],
            "eps": 1e-8,
            "weight_decay": 5e-6
        }
    },
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
            "total_num_steps": 428800,
            "warmup_num_steps": 10720,
            "warmup_min_ratio": 0,
            "cos_min_ratio": 0.0001,
            "last_batch_iteration": -1
        }
    }
}